{
  "name": "next-staticblog",
  "version": "0.2.0-beta.5",
  "description": "Load the article and parse the YAML into Next.js!",
  "homepage": "https://github.com/yd-tw/next-posts",
  "license": "MIT",
  "author": "twyd",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "keywords": [
    "next.js",
    "markdown",
    "yaml",
    "frontmatter",
    "blog",
    "post"
  ],
  "scripts": {
    "build": "tsdown && tsc --emitDeclarationOnly --outDir dist",
    "format": "prettier --write .",
    "test": "vitest run",
    "coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@std/yaml": "npm:@jsr/std__yaml@^1.0.12",
    "@types/node": "^24.10.13",
    "@vitest/coverage-v8": "^4.0.18",
    "prettier": "^3.8.1",
    "tsdown": "^0.12.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
